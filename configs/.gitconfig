[credential]
	helper = osxkeychain

[core]
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[user]
	name = <user-name>
	email = <user-email>
	signingkey = <signing-key>

[alias]
	cm = commit -m
	st = status -s
	a = add
	cmedit = git commit --amend -m
	ps = push
	pl = pull
	log = log --graph --decorate --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	b = branch
	bd = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"

[commit]
	# https://help.github.com/articles/signing-commits-using-gpg/
	gpgsign = true

[push]
	default = current

[web]
	browser = brave-browser

[github]
  user = <github-user>

[help]
	autocorrect = 1

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold # line info
	old = red # deletions
	new = green # additions

[color "status"]
	added = yellow
	changed = green
	untracked = cyan
